alias lame1 {
  %z = 0
  :Addanother
  if ( %z < $$1 ) { %z = %z + 1 | %ls = %ls $+ _ | goto Addanother }
  :Addan2
  if ( %z < 10 ) { %z = %z + 1 | %rs = %rs $+ _ | goto Addan2 }
  /.msg $chan 0,12Lame-O-Meter: 7,12 $$2 is 9,9 $+ %ls $+ 3,3 $+ %rs $+ 9,12 $$1 $+ 0 % $+ 7 lame.
  /unset %z
  /unset %ls
  /unset %rs
}

alias lame2 {
  %tx = Lame-O-Meter: $$2 is $$1 $+ 0 % lame.
  %lt = $len( %tx ) * 10
  %lp = %lt * $$1
  %lp = %lp / 100
  %rp = $len( %tx )
  %rp = %rp - %lp
  %t1 = $left( %tx , %lp )
  %t2 = $right( %tx , %rp )
  /.msg $chan 1,8 $+ %t1 $+ 8,1 $+ %t2 $+ 
  /unset %tx
  /unset %lt
  /unset %lp
  /unset %rp
  /unset %t1
  /unset %t2
}
